{
  "version": 2,
  "builds": [
    { "src": "api/proxy.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/_next/(.*)",
      "dest": "https://www.luogu.com/_next/$1",
      "headers": {
        "Host": "www.luogu.com",
        "X-Real-IP": "203.198.7.16"  
      }
    },
    {
      "src": "/(.*)",
      "dest": "/api/proxy?path=$1",
      "headers": {
        "Accept-Language": "en-US",
        "X-Forwarded-Region": "hkg1"
      }
    }
  ],
  "regions": ["hkg1"],
  "rewrites": [
    { 
      "source": "/(.*)", 
      "destination": "https://www.luogu.com/$1",
      "has": [
        {
          "type": "header",
          "key": "referer",
          "value": "(.*luogu\.com.*)"
        }
      ]
    }
  ]
}
